# Database (REQUIRED)
# Get this from your Neon database project settings
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# Authentication (REQUIRED)
# A strong, random string for signing JWTs (64+ characters recommended)
# Generate with: openssl rand -base64 64
JWT_SECRET="your-super-secret-64-character-random-string-here"

# Application
NODE_ENV="production"
PORT=5000

# Frontend URL for CORS (REQUIRED in production)
# Set to your production domain
FRONTEND_URL="https://your-app.com"

# Email Service (Optional - for future email verification)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
FROM_EMAIL="noreply@saturday.app"

# Monitoring (Optional - for production error tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# External Services (Optional - for future calendar integration)
GOOGLE_CALENDAR_CLIENT_ID="your-google-client-id"
GOOGLE_CALENDAR_CLIENT_SECRET="your-google-client-secret"
